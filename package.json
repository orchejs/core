{
  "name": "@orche/core",
  "version": "0.1.0",
  "description": "Easy REST APIs in NodeJS",
  "main": "index.js",
  "dependencies": {
    "app-root-path": "^2.0.1",
    "file-matcher": "^1.1.0",
    "moment": "^2.18.1"
  },
  "devDependencies": {
    "@types/app-root-path": "^1.2.4",
    "@types/chai": "^4.0.0",
    "@types/cors": "^2.8.1",
    "@types/express": "^4.0.36",
    "@types/hapi": "^16.1.5",
    "@types/koa": "^2.0.39",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.32",
    "@types/restify": "^4.3.4",
    "chai": "^4.0.2",
    "cors": "^2.8.3",
    "coveralls": "^2.13.1",
    "express": "^4.15.3",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "tslint-config-airbnb": "^5.2.0",
    "typescript": "^2.4.0"
  },
  "scripts": {
    "clean": "rm -rf ./build ./coverage",
    "lint": "node_modules/.bin/tslint lib/**/*.ts ./tests/**/*.spec.ts",
    "test": "node_modules/.bin/mocha --compilers ts:ts-node/register ./tests/**/*.spec.ts",
    "cp-package": "cp ./package.json ./build/core/",
    "build": "npm run clean &&  npm run lint && tsc && npm run cp-package",
    "coverage": "nyc --reporter=json npm test && mv coverage/coverage-final.json coverage/coverage.json && remap-istanbul -i coverage/coverage.json -o coverage/coverage.json && istanbul report lcov && istanbul report text",
    "travis": "npm run build && istanbul cover node jasmine ./build/file-matcher/test --captureExceptions && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/orchejs/core.git"
  },
  "author": "Mauricio Gemelli Vigolo",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/orchejs/core/issues"
  },
  "homepage": "https://github.com/orchejs/core#readme"
}
